@model Villa

<div class="w-100 card border-0 p-4">
    <div class="card-header bg-success ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Delete Villa</h2>
            </div>
        </div>
    </div>
    <div class="card-body border p-4">
        <form method="post" class="row">
            <input asp-for="Id" hidden />
            <div class="col-10">
                <div class="p-3">
                    <div class="form-floating py-2 col-12">
                        <input asp-for="Name" disabled class="form-control border shadow-sm" id="name" />
                        <label for="name" class="ms-2">Villa Name</label>
                    </div>

                    <div class="form-floating py-2 col-12">
                        <input asp-for="Description" disabled class="form-control border shadow-sm" id="description" />
                        <label for="description" class="ms-2">Villa Description</label>
                    </div>

                    <div class="form-floating py-2 col-12">
                        <input asp-for="Price" disabled class="form-control border shadow-sm" id="price" />
                        <label for="price" class="ms-2">Price</label>
                    </div>

                    <div class="form-floating py-2 col-12">
                        <input asp-for="Sqft" disabled class="form-control border shadow-sm" id="sqft" />
                        <label for="sqft" class="ms-2">Square Feet</label>
                    </div>

                    <div class="form-floating py-2 col-12">
                        <input asp-for="Occupancy" disabled class="form-control border shadow-sm" id="occupancy" />
                        <label for="occupancy" class="ms-2">Occupancy</label>
                    </div>

                    <div class="form-floating py-2 col-12">
                        <input asp-for="ImageUrl" disabled class="form-control border shadow-sm" id="imageUrl" />
                        <label for="imageUrl" class="ms-2">Image URL</label>
                    </div>

                    <div class="row pt-3">
                        <div class="col-6 col-md-3">
                            <button type="submit" class="btn btn-danger w-100">
                                <i class="bi bi-trash-fill"></i> Delete
                            </button>
                        </div>
                        <div class="col-6 col-md-3">
                            <a asp-controller="Villa" asp-action="Index" class="btn btn-secondary w-100">
                                <i class="bi bi-x-circle"></i> Cancel
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-2">
                <img src="@Model.ImageUrl" width="100%" style="border-radius:5px; border:1px solid #bbb9b9" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
