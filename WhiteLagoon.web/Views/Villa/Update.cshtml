@model Villa

<div class="w-100 card border-0 p-4">
    <div class="card-header bg-success bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2"> Update Villa</h2>
            </div>
        </div>
    </div>
    <div class="card-body border p-4">
        <form method="post" class="row" enctype="multipart/form-data">
            <input asp-for="Id" hidden />
            <div class="col-10">
                <div class="p-3">
                    <div class="form-floating py-2 col-12">
                        <input asp-for="Name" class="form-control border shadow-sm" id="name" placeholder="Villa Name" />
                        <label for="name" class="ms-2">Villa Name</label>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="form-floating py-2 col-12">
                        <input asp-for="Description" class="form-control border shadow-sm" id="description" placeholder="Villa Description" />
                        <label for="description" class="ms-2">Villa Description</label>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="form-floating py-2 col-12">
                        <input asp-for="Price" class="form-control border shadow-sm" id="price" placeholder="Price" />
                        <label for="price" class="ms-2">Price</label>
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>

                    <div class="form-floating py-2 col-12">
                        <input asp-for="Sqft" class="form-control border shadow-sm" id="sqft" placeholder="Square Feet" />
                        <label for="sqft" class="ms-2">Square Feet</label>
                        <span asp-validation-for="Sqft" class="text-danger"></span>
                    </div>

                    <div class="form-floating py-2 col-12">
                        <input asp-for="Occupancy" class="form-control border shadow-sm" id="occupancy" placeholder="Occupancy" />
                        <label for="occupancy" class="ms-2">Occupancy</label>
                        <span asp-validation-for="Occupancy" class="text-danger"></span>
                    </div>

                    <div class="form-floating py-2 col-12">
                        <input asp-for="Image" class="form-control border shadow " />
                        <input asp-for="ImageUrl" hidden class="form-control border shadow-sm" id="imageUrl" placeholder="Image URL" />
                        <label for="imageUrl" class="ms-2">Image URL</label>
                        <span asp-validation-for="ImageUrl" class="text-danger"></span>
                    </div>

                    <div class="row pt-3">
                        <div class="col-6 col-md-3">
                            <button type="submit" class="btn btn-success w-100">
                                <i class="bi bi-check-circle"></i> Update
                            </button>
                        </div>
                        <div class="col-6 col-md-3">
                            <a asp-controller="Villa" asp-action="Index" class="btn btn-secondary w-100">
                                <i class="bi bi-x-circle"></i> Cancel
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-2">
                <img src="@Model.ImageUrl" width="100%" style="border-radius:5px; border:1px solid #bbb9b9" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
